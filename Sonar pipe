pipeline {
    agent any

    stages {
        stage('Git checkout') {
            steps {
                git credentialsId: 'Git-03', url: 'https://github.com/ankureddy/boxfuse-sample-java-war-hello.git'
            }
        }
        stage('Compile') {
            steps {
                sh"mvn clean compile"
            }
        }
        stage('SONARQUBE-ANALYSIS') {
            steps {
                withSonarQubeEnv(Moon-server') {
                sh'''$SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=boxfuse-sample-java-war-hello \
                -Dsonar.java.binaries=.  \
                -Dsonar.projectkey=boxfuse-sample-java-war-hello '''
                }
            }
        }    
        stage('Build') {
            steps {
                sh"mvn clean package"
                sh"mv target/*.war target/myweb.war"
            }
        }
    }
}    
