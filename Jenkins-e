pipeline {
    agent any

    stages {
        stage('Git checkout') {
            steps {
                git credentialsId: 'Git-03', url: 'https://github.com/ankureddy/boxfuse-sample-java-war-hello.git'
            }
        }
        stage('Compile') {
            steps {
                sh"mvn clean compile"
            }
        }
        stage('Build') {
            steps {
                sh"mvn clean package"
            }
        }
        stage('Deploy tomcat') {
            steps {
                sshagent(['Tomcat-03']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/*.war ubuntu@3.109.202.144:/home/ubuntu/tomcat10/webapps
                    
                    shh ubuntu@3.109.202.144 /home/ubuntu/tomcat10/bin/shutdown.sh
                    
                    shh ubuntu@3.109.202.144 /home/ubuntu/tomcat10/bin/startup.sh
                """
                }
            } 
        }
    }
} 
